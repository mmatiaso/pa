@model PromocaoAgora.Models.Usuario

@{
    ViewBag.Title = "EditaUsuario";
    Layout = null;
}
<script type="text/javascript">
    $("#btn-cadastroUsuario").click(function () {
        var Usuario = {
            Nome: $("#txt_UNome").val(),
            Email: $("#txt_UEmail").val(),
            Senha: $("#txt_USenha").val()
        }
        $.post("/api/UpdateUsuario", Usuario)
            .done(function (data) {
                //console.log(data);
                if (data.responseStatus == "OK") {
                    alert("Usuário alterado com sucesso.");
                    location = "/site/areacliente";
                } else {
                    alert(data.desc);
                }
            });
    });
</script>


<div>
    
    <div id="formU">
        
        <label>Nome:</label><br/>
        <input type="text" id="txt_UNome" class="w-100 mb-2" placeholder="Nome" value="@Model.Nome" /><br />
        <label>Email:</label><br/>
        <input type="email" id="txt_UEmail" class="w-100 mb-2" placeholder="Email" value="@Model.Email" />
        <label>Alterar Senha:</label>
        <input type="password" id="txt_USenha" class="w-100 mb-2" placeholder="Preencha apenas se quiser alterar a Senha atual" />
        <button id="btn-cadastroUsuario" class="btn btn-primary">Alterar Dados</button>
    </div>
</div>

